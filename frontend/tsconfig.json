{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["DOM", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types/vite-env.d.ts"]
  },
  "include": ["src", "vite.config.ts", "src/types/vite-env.d.ts"],
  "exclude": ["node_modules"]
}
